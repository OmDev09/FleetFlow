generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Vehicle {
  id              String           @id @default(cuid())
  name            String
  model           String
  licensePlate    String           @unique
  maxLoadCapacityKg Int
  vehicleType     String
  status          String           @default("AVAILABLE")
  odometerKm      Float            @default(0)
  region          String?
  acquisitionCost Float?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  trips           Trip[]
  maintenanceLogs MaintenanceLog[]
  expenses        Expense[]
  fuelLogs        FuelLog[]
}

model Driver {
  id            String       @id @default(cuid())
  name          String
  email         String?
  licenseNumber String
  licenseExpiry DateTime
  vehicleTypes  String       // comma-separated: TRUCK,VAN,BIKE
  status        String       @default("AVAILABLE")
  safetyScore   Float        @default(100)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  trips         Trip[]
}

model Trip {
  id              String     @id @default(cuid())
  vehicleId       String
  driverId        String
  cargoWeightKg   Float
  origin          String
  destination     String
  status          String     @default("DRAFT")
  startOdometerKm Float?
  endOdometerKm   Float?
  revenue        Float?     // for ROI: (Revenue - (Maintenance + Fuel)) / Acquisition Cost
  createdAt       DateTime   @default(now())
  updatedAt       DateTime   @updatedAt
  completedAt     DateTime?
  vehicle         Vehicle    @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  driver          Driver     @relation(fields: [driverId], references: [id], onDelete: Cascade)
}

model MaintenanceLog {
  id          String   @id @default(cuid())
  vehicleId   String
  description String
  cost        Float?
  performedAt DateTime @default(now())
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

model Expense {
  id          String   @id @default(cuid())
  vehicleId   String
  description String
  amount      Float
  date        DateTime @default(now())
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

model FuelLog {
  id        String   @id @default(cuid())
  vehicleId String
  liters    Float
  cost      Float
  date      DateTime @default(now())
  tripId    String?
  vehicle   Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
}

model Cargo {
  id          String   @id @default(cuid())
  description String
  weightKg    Float
  origin      String?
  destination String?
  assignedTripId String?
  createdAt   DateTime @default(now())
}
